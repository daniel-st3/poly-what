# Core
WATCHDOG_ENV=dev
DATABASE_URL=sqlite:///watchdog.db
LOG_LEVEL=INFO

# Polymarket CLI
POLYMARKET_CLI_PATH=polymarket
POLYMARKET_EXPECTED_VERSION=0.1.4
POLYMARKET_COUNTRY_CODE=CO

# Trading mode safety
ENABLE_LIVE_TRADING=false
MAX_POSITION_PER_MARKET=0.20
KELLY_FRACTION=0.25
MAX_DRAWDOWN_P95=0.30
VPIN_KILL_THRESHOLD=0.70
MIN_DIVERGENCE=0.15
NEAR_RESOLUTION_HOURS=2
NEAR_RESOLUTION_FRACTION=0.05

# LLM providers
ROUTER_PROVIDER=mock
ROUTER_MODEL=gpt-4o-mini
EXECUTOR_PROVIDER=mock
EXECUTOR_MODEL=claude-sonnet-4
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# News sources
GDELT_ENABLED=true
GDELT_POLL_SECONDS=30
RSS_ENABLED=true
REDDIT_ENABLED=false
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
REDDIT_USER_AGENT=watchdog/0.1

# Optional Brave fallback
BRAVE_API_KEY=
